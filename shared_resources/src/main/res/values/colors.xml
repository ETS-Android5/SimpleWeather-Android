<resources>
    <color name="colorPrimary">#0070c0</color>
    <color name="colorPrimaryDark">#00458e</color>
    <color name="colorPrimaryLight">#589df2</color>
    <color name="colorPrimaryBackground">@color/colorPrimary</color>

    <color name="colorSecondary">#91cfff</color>
    <color name="colorSecondaryLight">#c5ffff</color>
    <color name="colorSecondaryDark">#5e9ecc</color>

    <!--colorBackground appears behind scrollable content and is used for the default window-->
    <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
    <!--and menus. colorError is used to indicate an error state for components such as-->
    <!--text fields.-->
    <color name="colorBackground">#ffffff</color>
    <color name="colorSurface">#ffffff</color>
    <color name="colorError">#b00020</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
    <!--on which they appear.-->
    <color name="colorOnPrimary">#ffffff</color>
    <color name="colorOnSecondary">#ffffff</color>
    <color name="colorOnBackground">#000000</color>
    <color name="colorOnSurface">#000000</color>
    <color name="colorOnError">#ffffff</color>

    <color name="colorText">#FFFFFF</color>
    <color name="colorTextPrimary">@color/abc_primary_text_material_light</color>
    <color name="colorTextSecondary">@color/abc_secondary_text_material_light</color>
    <color name="colorTextHint">@color/color_text_hint</color>
    <color name="invColorText">@color/colorPrimaryDark</color>

    <color name="buttonColor">?attr/colorPrimary</color>
    <color name="buttonColorText">@android:color/white</color>
    <color name="invButtonColor">@android:color/white</color>
    <color name="invButtonColorText">@color/colorPrimary</color>
    <color name="invButtonColorTextHint">@color/colorPrimaryLight</color>

    <color name="bg_swipe_delete">#ffdb4437</color>

    <color name="card_background_dark">#121212</color>
    <color name="card_background_light">#FFFFFF</color>

    <color name="colorTextShadow">#000000</color>
</resources>
