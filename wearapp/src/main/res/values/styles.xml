<resources>

    <!-- Base application theme. -->
    <style name="WearAppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="colorSecondary">@color/colorPrimaryLight</item>

        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorSurface">#121212</item>
        <item name="colorError">#cf6679</item>

        <item name="colorOnPrimary">#000000</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorOnBackground">#ffffff</item>
        <item name="colorOnSurface">#ffffff</item>
        <item name="colorOnError">#000000</item>

        <item name="android:windowBackground">@android:color/black</item>

    </style>

    <style name="WearAppTheme.Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="postSplashScreenTheme">@style/WearAppTheme</item>
    </style>

    <style name="WearSettingsTheme" parent="Theme.Wearable">
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="listPreferredItemHeightSmall">48dip</item>
        <item name="listPreferredItemPaddingStart">@dimen/horizontal_padding</item>
        <item name="listPreferredItemPaddingEnd">@dimen/horizontal_padding</item>
    </style>

</resources>
