<?xml version="1.0" encoding="utf-8"?>
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:configure="com.thewizrd.simpleweather.widgets.WeatherWidgetConfigActivity"
    android:initialLayout="@layout/app_widget_4x3_locations"
    android:minHeight="180dp"
    android:minWidth="250dp"
    android:minResizeHeight="110dp"
    android:minResizeWidth="250dp"
    android:previewImage="@drawable/appwidget_preview_4x3_locations"
    android:previewLayout="@layout/app_widget_4x3_locations_preview"
    android:resizeMode="horizontal|vertical"
    android:updatePeriodMillis="0"
    android:widgetCategory="home_screen"
    android:targetCellWidth="4"
    android:targetCellHeight="3"
    android:widgetFeatures="reconfigurable"
    tools:ignore="UnusedAttribute" />
