<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="288dp"
    tools:layout_width="288dp">

    <ImageView
        android:id="@+id/widgetBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_overlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/condition_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:minHeight="30dp"
                android:minWidth="75dp">

                <TextView
                    android:id="@+id/spacer_top"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/now_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="@string/label_datenow"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    style="@style/ShadowText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/weather_icon"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/spacer_middle"
                        android:layout_alignRight="@+id/spacer_middle"
                        android:layout_centerVertical="true"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/day_sunny_overcast" />

                    <TextView
                        android:id="@+id/spacer_middle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/condition_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/spacer_middle"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignStart="@+id/spacer_middle"
                        android:layout_centerVertical="true"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        style="@style/ShadowText"
                        tools:text="70Â°" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/spacer_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <ViewFlipper
                android:id="@+id/forecast_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:minHeight="30dp"
                android:minWidth="75dp"
                android:autoStart="true"
                android:flipInterval="10000"
                android:loopViews="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="2dp"
                android:shadowColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                style="@style/ShadowText"
                tools:text="New York, NY" />

            <ImageView
                android:id="@+id/showPrevious"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_left"
                android:tint="@android:color/white"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/showNext"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:scaleType="center"
                android:src="@drawable/ic_chevron_right"
                android:tint="@android:color/white"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/settings_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top"
                android:padding="4dp"
                android:alpha="0.7"
                android:src="@drawable/ic_settings_black_24dp"
                android:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>