<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="72dp"
    tools:layout_width="288dp">

    <ImageView
        android:id="@+id/widgetBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_background"
        android:tint="@color/color_background_day" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/condition_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/forecast_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="@string/label_datenow"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    style="@style/ShadowText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/weather_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="4dp"
                        android:adjustViewBounds="true"
                        android:gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:tint="@android:color/white"
                        style="@style/ShadowText"
                        tools:src="@drawable/ic_weather_icon" />

                    <ImageView
                        android:id="@+id/condition_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_margin="2dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="30dp"
                        android:scaleType="fitCenter"
                        style="@style/ShadowText"
                        tools:src="@drawable/notification_temp_pos70" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/forecast_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/condition_layout"
                android:layout_toRightOf="@+id/condition_layout"
                android:minHeight="30dp"
                android:minWidth="75dp"
                android:orientation="horizontal">

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                style="@style/ShadowText"
                tools:text="New York, NY" />

            <TextView
                android:id="@+id/update_time"
                style="@style/ShadowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:padding="4dp"
                android:text="--"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                tools:text="Updated at 1:00 AM" />

            <ImageView
                android:id="@+id/refresh_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:src="@drawable/ic_refresh_white_24dp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/refresh_progress"
                style="@style/ShadowProgressBar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:indeterminate="true"
                android:indeterminateTint="@android:color/white"
                android:padding="4dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/settings_button"
                style="@style/ShadowText"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:src="@drawable/ic_settings_black_24dp"
                android:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>