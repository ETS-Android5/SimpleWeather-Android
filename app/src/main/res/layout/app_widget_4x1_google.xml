<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_height="144dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:padding="2dp"
            android:src="@drawable/ic_refresh_white_24dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/refresh_progress"
            style="@style/ShadowProgressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/white"
            android:padding="4dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/settings_button"
            style="@style/ShadowText"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.7"
            android:padding="4dp"
            android:src="@drawable/ic_settings_black_24dp"
            android:tint="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/date_panel"
            style="@style/ShadowTextHeavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingEnd="2dp"
            android:paddingRight="2dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:text="Thursday, Sep 19"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/divider"
            style="@style/ShadowTextHeavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:text="|"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:visibility="invisible"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_alignBaseline="@id/condition_temp"
                android:layout_alignBottom="@id/condition_temp"
                android:layout_alignParentLeft="true"
                android:baseline="20dp"
                android:maxWidth="30dp"
                tools:src="@drawable/ic_weather_icon" />

            <TextView
                android:id="@+id/condition_temp"
                style="@style/ShadowTextHeavy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/weather_icon"
                android:fontFamily="sans-serif-light"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingStart="2dp"
                android:paddingLeft="2dp"
                android:paddingEnd="2dp"
                android:paddingRight="2dp"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                tools:text="77ÂºF" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/location_name"
        style="@style/ShadowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="New York, NY" />

</LinearLayout>