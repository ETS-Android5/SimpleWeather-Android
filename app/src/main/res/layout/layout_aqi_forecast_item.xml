<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="airQuality"
            type="com.thewizrd.shared_resources.weatherdata.model.AirQuality" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:theme="@style/Theme.MaterialComponents.DayNight">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/aqi_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.WeatherNow.SectionLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Sunday" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/aqi_components_flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:constraint_referenced_ids="pm25,pm10,o3,co,no2,so2"
            app:flow_horizontalAlign="start"
            app:flow_horizontalGap="8dp"
            app:flow_horizontalStyle="packed"
            app:flow_maxElementsWrap="3"
            app:flow_verticalGap="8dp"
            app:flow_verticalStyle="packed"
            app:flow_wrapMode="chain"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/aqi_level"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aqi_date_label" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/aqi_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textAppearance="?textAppearanceBody2"
            android:textSize="13sp"
            app:aqiIndexLevel="@{airQuality.index}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aqi_components_flow"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/aqi_level_300" />

        <TextView
            android:id="@+id/pm25_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="45dp"
            android:padding="4dp"
            android:text="@string/units_pm25" />

        <TextView
            android:id="@+id/pm25_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="40dp"
            android:padding="4dp"
            app:aqiIndex="@{airQuality.pm25}"
            app:fallbackTextColor="@{@color/colorOnSurface}"
            tools:text="154" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="pm25_label,pm25_value"
            app:hideIfNull="@{airQuality.pm25}" />

        <TextView
            android:id="@+id/pm10_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="45dp"
            android:padding="4dp"
            android:text="@string/units_pm10" />

        <TextView
            android:id="@+id/pm10_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="40dp"
            android:padding="4dp"
            app:aqiIndex="@{airQuality.pm10}"
            app:fallbackTextColor="@{@color/colorOnSurface}"
            tools:text="68" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/pm10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="pm10_label,pm10_value"
            app:hideIfNull="@{airQuality.pm10}" />

        <TextView
            android:id="@+id/no2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="45dp"
            android:padding="4dp"
            android:text="@string/units_no2" />

        <TextView
            android:id="@+id/no2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="40dp"
            android:padding="4dp"
            app:aqiIndex="@{airQuality.no2}"
            app:fallbackTextColor="@{@color/colorOnSurface}"
            tools:text="32" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/no2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="no2_label,no2_value"
            app:hideIfNull="@{airQuality.no2}"
            android:visibility="gone" />

        <TextView
            android:id="@+id/o3_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="45dp"
            android:padding="4dp"
            android:text="@string/units_o3" />

        <TextView
            android:id="@+id/o3_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="40dp"
            android:padding="4dp"
            app:aqiIndex="@{airQuality.o3}"
            app:fallbackTextColor="@{@color/colorOnSurface}"
            tools:text="9.4" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/o3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="o3_label,o3_value"
            app:hideIfNull="@{airQuality.o3}" />

        <TextView
            android:id="@+id/co_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="45dp"
            android:padding="4dp"
            android:text="@string/units_co" />

        <TextView
            android:id="@+id/co_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="40dp"
            android:padding="4dp"
            app:aqiIndex="@{airQuality.co}"
            app:fallbackTextColor="@{@color/colorOnSurface}"
            tools:text="9.2" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="co_label,co_value"
            app:hideIfNull="@{airQuality.co}"
            android:visibility="gone" />

        <TextView
            android:id="@+id/so2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="45dp"
            android:padding="4dp"
            android:text="@string/units_so2" />

        <TextView
            android:id="@+id/so2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="40dp"
            android:padding="4dp"
            app:aqiIndex="@{airQuality.so2}"
            app:fallbackTextColor="@{@color/colorOnSurface}"
            tools:text="5.1" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/so2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="so2_label,so2_value"
            app:hideIfNull="@{airQuality.so2}"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>