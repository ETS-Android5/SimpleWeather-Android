<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:gravity="center_vertical"
    android:theme="@style/AppWidgetTheme.AppWidgetContainer"
    tools:ignore="HardcodedText"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tuesday"
        android:textAppearance="?textAppearanceBodyLarge"
        android:textColor="@color/widget_innerview_foreground_color" />

    <ImageView
        android:id="@+id/forecast_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/wi_day_sunny" />

    <TextView
        android:id="@+id/forecast_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="15°"
        android:textAppearance="?textAppearanceBodyLarge"
        android:textColor="@color/widget_innerview_foreground_color" />

    <TextView
        android:id="@+id/forecast_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="11°"
        android:textAppearance="?textAppearanceBodyLarge"
        android:alpha="0.75"
        android:textColor="@color/widget_innerview_foreground_color" />

</LinearLayout>