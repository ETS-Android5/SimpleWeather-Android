<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_vertical|end"
    android:orientation="horizontal"
    android:theme="@style/AppWidgetTheme.AppWidgetContainer"
    tools:ignore="HardcodedText"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:id="@+id/hrforecast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/hrforecast1_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLines="1"
            android:padding="2dp"
            android:text="70°"
            android:textColor="?colorOnSurface"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/hrforecast1_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="-4dp"
            android:adjustViewBounds="true"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/wi_day_thunderstorm"
            android:tint="@color/widget_m3_pill_foreground_color"
            android:tintMode="src_in" />

        <TextView
            android:id="@+id/hrforecast1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:text="4pm"
            android:textColor="?colorOnSurface"
            android:textSize="14sp" />

