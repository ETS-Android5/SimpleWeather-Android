<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryBackground"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.thewizrd.simpleweather.stepper.BottomStepperNavigationBar
            android:id="@+id/bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:nav_backgroundColor="@color/colorPrimaryBackground"
            app:nav_startButtonText="@string/label_getstarted"
            app:nav_foregroundColor="@android:color/white"
            tools:context=".setup.SetupActivity" />

    </LinearLayout>

</layout>